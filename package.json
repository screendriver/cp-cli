{
  "name": "cp-cli",
  "version": "1.1.2",
  "description": "A 'cp' CLI util for Node.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf bin",
    "precommit": "pretty-quick --staged",
    "prepublish": "npm run build && npm run lint && npm run test",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "tsc && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/screendriver/cp-cli.git"
  },
  "keywords": ["cp", "cp -R -L", "copy"],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/screendriver/cp-cli/issues"
  },
  "homepage": "https://github.com/screendriver/cp-cli#readme",
  "bin": "bin/cp-cli.js",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": ["<rootDir>/bin"],
    "moduleFileExtensions": ["ts", "tsx", "js", "json"]
  },
  "dependencies": {
    "fs-extra": "7.0.0",
    "yargs": "12.0.2"
  },
  "devDependencies": {
    "@types/fs-extra": "5.0.4",
    "@types/jest": "23.3.5",
    "@types/yargs": "12.0.1",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "prettier": "1.14.3",
    "pretty-quick": "1.8.0",
    "rimraf": "2.6.2",
    "shelljs": "0.8.2",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-language-service": "0.9.9",
    "typescript": "3.1.3"
  }
}
