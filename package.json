{
  "name": "cp-cli",
  "version": "1.1.0",
  "description": "A 'cp' CLI util for Node.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf bin",
    "prepublish": "npm run build && npm run lint && npm run test",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/screendriver/cp-cli.git"
  },
  "keywords": [
    "cp",
    "cp -R -L",
    "copy"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/screendriver/cp-cli/issues"
  },
  "homepage": "https://github.com/screendriver/cp-cli#readme",
  "bin": "bin/cp-cli.js",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/bin"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^22.2.2",
    "@types/yargs": "^11.0.0",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.1"
  }
}
